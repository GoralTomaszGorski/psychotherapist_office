<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0007" author="tomasz.gorski88@gmail.com">

        <createTable tableName="change_password_token">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="token" type="VARCHAR(100)"/>
            <column name="currentPassword" type="VARCHAR(200)"/>
            <column name="newPassword" type="VARCHAR(200)"/>
            <column name="confirmationPassword" type="VARCHAR(200)"/>
            <column name="expiryDateTime" type="LocalDateTime"/>
            <column name="user" type="BIGINT">
            <constraints nullable="false"
                         foreignKeyName="fk_user_id"
                         referencedTableName="users"
                         referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>